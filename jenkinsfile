pipeline 
{
    agent any
    
    stages 
    {
        stage('Checkout') 
        {
            steps 
            {
                checkout scm
            }
        }

        stage('Build Docker Image') 
        {
            steps 
            {
                script 
                {
                    // Build the Docker image
                    sh 'docker build -t sarithaladella/index .'
                    sh 'docker build -t sarithaladella/resume .'
                }
            }
        }

        stage('Push to Docker Hub') 
        {
            steps 
            {
                script 
                {
                    withCredentials([usernamePassword(credentialsId: 'key', passwordVariable: 'DOCKERHUB_PASSWORD', usernameVariable: 'DOCKERHUB_USERNAME')]) {
                        // Login to Docker Hub
                        sh "docker login -u $DOCKERHUB_USERNAME -p $DOCKERHUB_PASSWORD"
                        
                        // Push the Docker image to Docker Hub
                        sh 'docker push sarithaladella/index'
                        sh 'docker push sarithaladella/resume'
            
                    }
                }
            }
        }

          stage('Deploy to EC2 instance') {
            steps {
                script {
                    sshagent(credentials: ['host-key']) {
                        sh '''
                        ssh -o StrictHostKeyChecking=no ec2-user@107.20.96.2 "sudo docker pull sarithaladella/index && sudo docker run -d -p 8000:7000 sarithaladella/index"
                        ssh -o StrictHostKeyChecking=no ec2-user@107.20.96.2 "sudo docker pull sarithaladella/resume && sudo docker run -d -p 9000:8000 sarithaladella/resume"
                        '''
                    }      
                }   
            }              
        }

    }
}
